<header>
  <nav class="navbar">
    <div class="home-logo">
      <a href="/">
        <img class="logo" src="assets/images/LearnIT-logo.png" alt="">
      </a>
      <span>LearnIT</span>
    </div>
    <div class="create-button">
      <% if (user) {%>
      <a href="/resources/create">
        <button class="btn-create" type="submit">Create</button>
      </a>
      <% } %>
    </div>
    <div id="search-container">
      <div class="search-bar">
        <svg class="search-icon" aria-hidden="true" viewBox="0 0 24 24">
          <g>
            <path
              d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z"
            ></path>
          </g>
        </svg>
        <input placeholder="Search" type="search" class="input" id="input" autofocus />
      </div>
    </div>

    <% if (hideUserButtons) { %>
      <% } else { %>
        <% if (!user) { %>
        <div class="user-info">
          <a href="/login">
            <button class="btn-login" type="submit">Login</button>
          </a>
          <a href="/register">
            <button class="btn-register" type="submit">Register</button>
          </a>
          <% } else { %>
        <a href="/api/login/logout">
          <button class="btn-logout" type="submit">Logout</button>
        </a>
        <% } %>
      </div>
    <% } %>
  </nav>
</header>
