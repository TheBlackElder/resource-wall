<div class="user-profile">
  <h3>Edit Profile</h3>

  <div class="res-thumbnail">
    <div id="imagePreview"></div>
    <input id="uploadFile" type="file" name="image" class="img" />
  </div>

  <div>
    <label for="name">Name</label>
    <br />
    <input type="name" name="name" placeholder="name" required />
  </div>
  <div>
    <label for="name">Username</label>
    <br />
    <input type="username" name="username" placeholder="username" required />
  </div>
  <div>
    <label for="bio">Bio</label>
    <br />
    <textarea name="bio" id="user-bio" cols="30" rows="10"></textarea>
  </div>
  <div>
    <div>
      <label for="email">Email</label>
      <br />
      <input type="email" name="email" placeholder="email" disabled />
    </div>
    <br />
    <p><a class="modal-trigger" href="#modal1">Change Password</a></p>
    <button type="submit" class="btn btn-primary">Save</button>
    <button type="submit" class="btn">Cancel</button>
  </div>

  <div id="modal1" class="modal">
    <div class="modal-content">
      <span class="close right">&times;</span>
      <h4>Change Password</h4>
      <label for="password">Old Password</label>
      <input
        type="password"
        name="old-password"
        placeholder="old-password"
        required
      />
      <label for="password">New Password</label>
      <input
        type="password"
        name="new-password"
        placeholder="new-password"
        required
      />
      <label for="password">Confirm Password</label>
      <input
        type="password"
        name="confirm-password"
        placeholder="confirm-password"
        required
      />
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat"
        >Confirm</a
      >
    </div>
  </div>
</div>
