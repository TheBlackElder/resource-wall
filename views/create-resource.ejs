  <title>Create Resource</title>
</head>
<body>
 <h1>Create Resource</h1>
<div id="create-resource-container">
  <div class="creator">
    <i class="fa-solid fa-circle-user"></i>
    <span>@username_handle</span>
  </div>

<form class="col s12" id="new-resource-form" method="POST" action="/resources/create">
<div class="category-dropdown">
  <div class="input-field col s12">
    <select name="category_id">
      <option value="" disabled selected>Choose category</option>
      <option value="1" name="category_id">Web Development</option>
      <option value="2" name="category_id">UX/UI</option>
      <option value="3" name="category_id">Cybersecurity</option>
      <option value="4" name="category_id">AI</option>
      <option value="5" name="category_id">Blockchain</option>
    </select>
    <label>Categories</label>
  </div>
</div>

  <div class="row">
    <div class="input-field col s12">
      <input id="title" type="text" class="validate" name="title" required />
      <label for="title">Title</label>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <input id="description" type="text" class="validate" name="description" required />
      <label for="description">Description</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <input id="url" type="text" class="validate" name="url" required />
      <label for="url">URL</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <input id="media-url" type="text" class="validate" name="media_url" required />
      <label for="media-url">Thumbnail-URL</label>
    </div>
  </div>


  <div class="file-field input-field">
    <div class="res-thumbnail">
      <div id="imagePreview"></div>
      <input id="uploadFile" type="file" name="image" class="img" />
    </div>
    <!-- <div class="btn">
      <span>Upload thumbnail</span>
      <input type="file" name="thumbnail">
    </div> -->
  </div>

  
    <button type="submit" name="create">
      Create
    </button>

</form>
<a href="/">Back</a>
</div>
</body>
</html>
