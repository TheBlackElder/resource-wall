<div id="create-resource">
  <div class="creator">
    <i class="fa-solid fa-circle-user"></i>
    <span>@username_handle</span>
  </div>

<form class="col s12" id="new-resource-form" method="POST" action="/create">
<div class="category-dropdown">
  <div class="input-field col s12">
    <select>
      <option value="" disabled selected>Choose category</option>
      <option value="1">Web Development</option>
      <option value="2">UX/UI</option>
      <option value="3">Cybersecurity</option>
      <option value="4">AI</option>
      <option value="5">Blockchain</option>
    </select>
    <label>Categories</label>
  </div>
</div>

  <div class="row">
    <div class="input-field col s12">
      <input id="title" type="text" class="validate" name="title" required />
      <label for="title">Title</label>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <input id="description" type="text" class="validate" name="description" required />
      <label for="description">Description</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <input id="url" type="text" class="validate" name="url" required />
      <label for="url">URL</label>
    </div>
  </div>

  <div class="file-field input-field">
    <div class="btn">
      <span>Upload thumbnail</span>
      <input type="file" name="thumbnail">
    </div>
  </div>

  <div class="switch">
    <label>
      <input type="checkbox" name="is_video"/>
      <span class="lever"></span>
      Is it a video?
    </label>
  </div>

  <button type="submit" name="">
    Create
  </button>
</form>
<a href="/">Back</a>
